!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title FotoApp
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body#top
    %header#home
       %nav
        .container-fluid
          .row
            .col-md-8.col-md-offset-2.col-sm-8.col-sm-offset-2.col-xs-8.col-xs-offset-2
              %nav.pull
                %ul.top-nav
                  %li
                    %a{:href => "#intro"}
                      Introduction
                      %span.indicator
                        %i.fa.fa-angle-right
                  %li
                    %a{:href => "#features"}
                      Features
                      %span.indicator
                        %i.fa.fa-angle-right
                  %li
                    %a{:href => "#responsive"}
                      Responsive Design
                      %span.indicator
                        %i.fa.fa-angle-right
                  %li
                    %a{:href => "#portfolio"}
                      Portfolio
                      %span.indicator
                        %i.fa.fa-angle-right
                  %li
                    %a{:href => "#team"}
                      Team
                      %span.indicator
                        %i.fa.fa-angle-right
                  %li
                    %a{:href => "#contact"}
                      Get in Touch
                      %span.indicator
                        %i.fa.fa-angle-right
    = yield

    %footer
      .container
        .row
          .col-md-6
            %ul.legals
              %li
                %a{:href => "#"} Terms &amp; Conditions
              %li
                %a{:href => "#"} Legals
          .col-md-6.credit
            %p
              Designed &amp; Developed by
              %a{:href => "http://www.peterfinlan.com/"} Peter Finlan
              exclusively for
              %a{:href => "http://tympanus.net/codrops/"}
                %em Codrops

                
  = javascript_include_tag 'application', 'data-turbolinks-track' => true
